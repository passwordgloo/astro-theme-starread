---
import Base from './Base.astro';
import { themeConfig } from '../../starread.config';

// 导入动态组件加载工具函数
import { loadDynamicComponents } from '../utils/dynamicComponents';

// 组件映射配置
const widgetComponents = {
  authorWidget: () => import('../components/AuthorWidget.astro')
};

// 动态加载启用的组件
const loadedWidgets = await loadDynamicComponents(widgetComponents, themeConfig.sidebar.home);
---

<Base title={Astro.props.title}>
  <!-- 左侧内容区域 - 动态显示标签 -->
  <div class="space-y-6">
    <div class="bg-white/70 backdrop-blur-xl border border-white/20 shadow-[0_1px_0_0_rgba(255,255,255,0.6)_inset,0_8px_30px_rgba(0,0,0,0.06)] dark:bg-cyan-950/30 dark:backdrop-blur-xl dark:border-white/10 dark:shadow-[0_1px_0_0_rgba(255,255,255,0.08)_inset,0_8px_30px_rgba(0,0,0,0.35)] rounded-lg shadow-sm p-6">
      <h1 class="text-2xl font-bold mb-6">{Astro.props.tagName || "内容"}</h1>
      
      <!-- 动态显示所有标签及其计数 -->
      {Astro.props.allTags && (
        <div class="flex flex-wrap gap-3 mb-8">
          {Object.entries(Astro.props.allTags).map(([tag, count]) => (
            <a 
              key={tag} 
              href={`/tag/${encodeURIComponent(tag)}`} 
              class={`px-3 py-1 rounded-full text-sm transition-colors hover:opacity-90 ${ 
                tag === Astro.props.currentTag 
                  ? 'bg-primary dark:bg-secondary text-white' 
                  : 'bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-200'
              }`}
            >
              {tag} {count}
            </a>
          ))}
        </div>
      )}
      
      <!-- 动态显示当前标签下的文章列表 -->
      <div class="space-y-4">
        {Astro.props.articles?.length > 0 ? (
          Astro.props.articles.map((article, index) => (
            <div key={article.slug} class="flex items-center p-4 border border-gray-100 dark:border-gray-700 rounded-lg hover:bg-gray-50 dark:hover:bg-white/5 transition-colors">
              <div class="p-3 rounded-md mr-4 flex-shrink-0">
                <div class="bg-primary dark:bg-secondary text-white w-10 h-10 rounded-full flex items-center justify-center font-bold">{index + 1}</div>
              </div>
              <div class="flex-grow">
                <h3 class="font-medium text-lg"><a href={article.data.permalink || (article._collection === 'notes' ? `/notes/${article.slug}` : `/articles/${article.slug}`)} class="hover:text-primary dark:hover:text-secondary transition-colors">{article.data.title}</a></h3>
                <p class="text-sm text-gray-500 dark:text-gray-400">#{article.data.categories?.join(', #') || '未分类'}</p>
              </div>
            </div>
          ))
        ) : (
          <p class="text-center text-gray-500 dark:text-gray-400 py-10">暂无内容</p>
        )}
      </div>
    </div>
  </div>

  <!-- 右侧边栏 -->
  <Fragment slot="sidebar">
    {loadedWidgets.map(({ key, component: Component }) => (
      <Component key={key} />
    ))}
  </Fragment>
</Base>