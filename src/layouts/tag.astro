---
import Base from './Base.astro';
import { themeConfig } from '../../starread.config';

// 导入动态组件加载工具函数
import { loadDynamicComponents } from '../utils/dynamicComponents';

// 组件映射配置
const widgetComponents = {
  authorWidget: () => import('../components/AuthorWidget.astro')
};

// 动态加载启用的组件
const loadedWidgets = await loadDynamicComponents(widgetComponents, themeConfig.sidebar.home);
---

<Base title={Astro.props.title}>
  <!-- 左侧内容区域 - 动态显示标签 -->
  <div class="space-y-6">
    <div class="bg-white/70 backdrop-blur-xl border border-white/20 shadow-[0_1px_0_0_rgba(255,255,255,0.6)_inset,0_8px_30px_rgba(0,0,0,0.06)] dark:bg-cyan-950/30 dark:backdrop-blur-xl dark:border-white/10 dark:shadow-[0_1px_0_0_rgba(255,255,255,0.08)_inset,0_8px_30px_rgba(0,0,0,0.35)] rounded-lg shadow-sm p-6">
      <div class="flex items-center mb-6">
        <span class="inline-block w-6 h-6 mr-2"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2 12V2h10l8.59 8.59a2 2 0 0 1 0 2.82z"></path><line x1="7" y1="7" x2="7" y2="7"></line></svg></span>
        <h1 class="text-2xl font-bold">标签</h1>
      </div>
      
      <!-- 动态显示所有标签及其计数 -->
      {Astro.props.allTags && (
        <div class="flex flex-wrap gap-3 mb-8">
          {Object.entries(Astro.props.allTags).map(([tag, count]) => (
            <a 
              key={tag} 
              href={`/tag/${encodeURIComponent(tag)}`} 
              class={`px-3 py-1 rounded-full text-sm transition-colors hover:opacity-90 font-medium ${ 
                tag === Astro.props.currentTag 
                  ? 'bg-cyan-500 text-white' 
                  : 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200'
              }`}
            >
              {tag} <span class="ml-1 opacity-80">{count}</span>
            </a>
          ))}
        </div>
      )}
      
      <!-- 动态显示当前标签下的文章列表 -->
      {Astro.props.articles?.length > 0 ? (
        <div class="space-y-4">
          {Astro.props.currentTag && (
            <h2 class="text-xl font-bold mb-4">{Astro.props.currentTag}</h2>
          )}
          <div class="space-y-1">
            {Astro.props.articles.map((article) => (
              <div key={article.slug} class="flex justify-between items-center p-3 rounded-lg hover:bg-gray-50 dark:hover:bg-white/5 transition-colors">
                <h3 class="font-medium text-base"><a href={article.data.permalink} class="hover:text-primary dark:hover:text-secondary transition-colors">{article.data.title}</a></h3>
                <span class="text-sm text-gray-500 dark:text-gray-400">{typeof article.data.date === 'string' ? article.data.date.split(' ')[0] : article.data.date?.toISOString().split('T')[0]}</span>
              </div>
            ))}
          </div>
        </div>
      ) : (
        <p class="text-center text-gray-500 dark:text-gray-400 py-10">暂无内容</p>
      )}
    </div>
  </div>

  <!-- 右侧边栏 -->
  <Fragment slot="sidebar">
    {loadedWidgets.map(({ key, component: Component }) => (
      <Component key={key} />
    ))}
  </Fragment>
</Base>