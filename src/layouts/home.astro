---
import Base from './Base.astro';
import Banner from "../components/Banner.astro";
import Carousel from '../components/Carousel.astro';
import AuthorWidget from '../components/AuthorWidget.astro';
import AdWidget from '../components/AdWidget.astro';
import TagCloud from "../components/TagCloud.astro";
import ArticleSection from '../components/ArticleSection.astro';
import LatestArticle from '../components/LatestArticle.astro';
import Progress from '../widget/Progress.astro';
import Statistic from '../components/Statistic.astro'
import { themeConfig } from '../../starread.config';
import { getCollection } from 'astro:content';

// 获取所有文章和笔记
const articles = await getCollection('articles');
const notes = await getCollection('notes');
const allContent = [...articles, ...notes];

// 按分类筛选内容
const categoryArticles = {};

themeConfig.widget.categories.forEach(category => {
  categoryArticles[category.name] = allContent.filter(item => 
    item.data.categories?.includes(category.name) || 
    item.data.tags?.includes(category.name)
  );
});

// 最新内容（按日期排序）
const latestArticles = [...allContent]
  .sort((a, b) => new Date(b.data.date || 0) - new Date(a.data.date || 0))
  .slice(0, 5);

// 轮播文章（取前5篇有封面图的内容）
const carouselArticles = allContent
  .filter(item => item.data.cover)
  .slice(0, 5);
---

<Base title={Astro.props.title}>
  <!-- 左侧内容区域 -->
  <div class="space-y-6">
    <Banner />
    <Carousel articles={carouselArticles.length > 0 ? carouselArticles : []} />

    <!-- 文章分类区域 -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
      {themeConfig.widget.categories.map((category) => (
        <ArticleSection
          title={category.title}
          articles={categoryArticles[category.name]?.length > 0 ? categoryArticles[category.name] : []}
          category={category.name}
          key={category.name}
        />
      ))}
    </div>
    <LatestArticle articles={articles} notes={notes} />
  </div>

  <!-- 右侧边栏 -->
  <Fragment slot="sidebar">
    {themeConfig.sidebar.home.progress && <Progress/>}
    {themeConfig.sidebar.home.authorWidget && <AuthorWidget />}
    {themeConfig.sidebar.home.adWidget && <AdWidget />}
    {themeConfig.sidebar.home.tag && <TagCloud />}
    {themeConfig.sidebar.home.statistic && <Statistic/>}
  </Fragment>

  <!-- 移动端底部Tab栏 -->
  <Fragment slot="mobile-bottom-tab">
    <div id="mobile-bottom-tab" class="md:hidden fixed bottom-0 left-0 right-0 bg-white dark:bg-gray-900 border-t dark:border-gray-700 px-2 py-2 z-40">
      <div class="flex items-center justify-around">
        {themeConfig.navbar.map((item) => (
          item.href && (
            <a href={item.href} class="flex flex-col items-center space-y-1 text-xs text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors flex-1 py-2">
              {item.icon && <span class={`${item.icon} h-5 w-5`}></span>}
              <span>{item.name}</span>
            </a>
          )
        ))}
      </div>
    </div>
  </Fragment>
</Base>

