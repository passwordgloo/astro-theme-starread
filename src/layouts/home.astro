---
import Base from './Base.astro';
import Banner from "../components/Banner.astro";
import Carousel from '../components/Carousel.astro';
import ArticleSection from '../components/ArticleSection.astro';
import LatestArticle from '../components/LatestArticle.astro';
import { themeConfig } from '../../starread.config';
import { getCollection } from 'astro:content';

// 导入动态组件加载工具函数
import { loadDynamicComponents } from '../utils/dynamicComponents';

// 组件映射配置
const widgetComponents = {
  progress: () => import('../widgets/Progress.astro'),
  authorWidget: () => import('../components/AuthorWidget.astro'),
  adWidget: () => import('../components/AdWidget.astro'),
  tag: () => import('../components/TagCloud.astro'),
  statistic: () => import('../components/Statistic.astro')
};

// 动态加载启用的组件
const loadedWidgets = await loadDynamicComponents(widgetComponents, themeConfig.sidebar.home);

// 获取所有文章和笔记 - 只获取必要字段
const articles = await getCollection('articles', {
  filter: () => true,
  projection: {
    data: { title: true, date: true, categories: true, tags: true, cover: true, permalink: true },
    collection: true,
    slug: true
  }
});
const notes = await getCollection('notes', {
  filter: () => true,
  projection: {
    data: { title: true, date: true, categories: true, tags: true, cover: true, permalink: true },
    collection: true,
    slug: true
  }
});
const allContent = [...articles, ...notes];

// 预计算日期以避免重复计算
const contentWithDates = allContent.map(item => ({
  ...item,
  _sortDate: new Date(item.data.date || 0).getTime()
}));

// 按分类筛选内容
const categoryArticles = {};

themeConfig.widget.categories.forEach(category => {
  categoryArticles[category.name] = contentWithDates.filter(item => 
    item.data.categories?.includes(category.name) || 
    item.data.tags?.includes(category.name)
  );
});

// 最新内容（按日期排序）
const latestArticles = [...contentWithDates]
  .sort((a, b) => b._sortDate - a._sortDate)
  .slice(0, 5);

// 轮播文章（取前5篇有封面图的内容）
const carouselArticles = contentWithDates
  .filter(item => item.data.cover)
  .sort((a, b) => b._sortDate - a._sortDate)
  .slice(0, 5);
---

<Base title={Astro.props.title}>
  <!-- 左侧内容区域 -->
  <div class="space-y-6">
    <Banner />
    <Carousel articles={carouselArticles.length > 0 ? carouselArticles : []} />

    <!-- 文章分类区域 -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
      {themeConfig.widget.categories.map((category) => (
        <ArticleSection
          title={category.title}
          articles={categoryArticles[category.name]?.length > 0 ? categoryArticles[category.name] : []}
          category={category.name}
          key={category.name}
        />
      ))}
    </div>
    <LatestArticle articles={articles} notes={notes} />
  </div>

  <!-- 右侧边栏 -->
  <Fragment slot="sidebar">
    {loadedWidgets.map(({ key, component: Component }) => (
      <Component key={key} />
    ))}
  </Fragment>

  <!-- 移动端底部Tab栏 -->
  <Fragment slot="mobile-bottom-tab">
    <div id="mobile-bottom-tab" class="md:hidden fixed bottom-0 left-0 right-0 bg-white dark:bg-gray-900 border-t dark:border-gray-700 px-2 py-2 z-40">
      <div class="flex items-center justify-around">
        {themeConfig.navbar.map((item) => (
          item.href && (
            <a href={item.href} class="flex flex-col items-center space-y-1 text-xs text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors flex-1 py-2" data-astro-prefetch>
              {item.icon && <span class={`${item.icon} h-5 w-5`}></span>}
              <span>{item.name}</span>
            </a>
          )
        ))}
      </div>
    </div>
  </Fragment>
</Base>

