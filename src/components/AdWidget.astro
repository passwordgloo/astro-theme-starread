---
import { themeConfig } from '../../starread.config';
---

<div class="bg-gradient-to-r from-purple-500 to-blue-500 rounded-lg shadow-sm p-4 text-white">
  <h3 class="font-bold text-lg mb-2">{themeConfig.widget.ad.title}</h3>
<p class="mb-3 text-sm opacity-90">{themeConfig.widget.ad.description}</p>
<a href={themeConfig.widget.ad.link} class="bg-white text-purple-600 rounded-md px-3 py-1 text-sm font-medium hover:bg-opacity-90 transition-colors inline-block">{themeConfig.widget.ad.buttonText}</a>
</div>