---
import { themeConfig } from '../../starread.config';

interface Props {
  title: string;
  cover: string;
  date: string;
  tags?: string[];
  categories?: string[];
  wordCount?: number;
  permalink?: string;
}

const {
  title,
  cover,
  date,
  tags = [],
  categories = [],
  wordCount = 0,
  permalink
} = Astro.props;

// 计算派生数据
const displayTags = tags.slice(0, 3);
const readingTime = Math.ceil(wordCount / 100);

// 获取波浪效果配置，默认为 true
const showPostTopWave = themeConfig.dynamicEffect?.postTopWave ?? true;

// 生成粒子数据（6个粒子）
const particles = Array.from({ length: 6 }, (_, index) => ({
  left: `${(index * 17) % 100}%`,
  top: `${(index * 23) % 80 + 10}%`,
  width: `${2 + (index % 3)}px`,
  height: `${2 + (index % 3)}px`,
  backgroundColor: `rgba(255, 255, 255, ${0.3 + (index * 0.1) % 0.3})`,
  animationDelay: `${(index * 0.7) % 3}s`,
  animationDuration: `${3 + (index * 0.5) % 2}s`,
  boxShadow: `0 0 ${2 + (index % 2) * 2}px rgba(255, 255, 255, 0.4)`
}));
---

<div class="relative overflow-hidden bg-white dark:bg-gray-800 transition-colors duration-300">
  <!-- 背景图片 -->
  <div class="absolute inset-0 overflow-hidden">
    <img 
      src={cover} 
      alt={title}
      class="w-full h-full object-cover transform transition-transform duration-700 hover:scale-105"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/50 to-transparent"></div>
  </div>
  
  <!-- 内容区域 -->
  <div class="relative p-8 min-h-[240px] flex flex-col justify-end text-center">
    <div class="mb-6">
      <h1 class="text-3xl font-bold text-white leading-tight mb-3">
        {title}
      </h1>
      
      <!-- 分类和标签信息 - 同一行显示 -->
      <div class="flex flex-wrap justify-center gap-2 mb-4">
        {categories.map((category) => (
          <span 
            class="px-3 py-1 text-xs font-medium bg-blue-500/20 text-blue-100 rounded-full backdrop-blur-sm"
          >
            {category}
          </span>
        ))}
        {displayTags.map((tag) => (
          <span 
            class="px-3 py-1 text-xs font-medium bg-purple-500/20 text-purple-100 rounded-full backdrop-blur-sm"
          >
            #{tag}
          </span>
        ))}
      </div>
      
      <div class="flex flex-wrap justify-center items-center text-white/90 text-sm gap-x-6 gap-y-2">
        <div class="flex items-center">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <span class="font-medium">{date}</span>
        </div>
        <div class="flex items-center">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          <span class="font-medium">{wordCount} 字</span>
        </div>
        <div class="flex items-center">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span class="font-medium">
            {readingTime} 分钟阅读
          </span>
        </div>
        <div class="flex items-center">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
          </svg>
          <span class="font-medium">
            <span id="busuanzi_page_pv">加载中...</span> 次阅读
          </span>
        </div>
      </div>
    </div>
  </div>
  
  <!-- 波浪效果区域 - 根据配置显示 -->
  {showPostTopWave && (
    <section class="main-hero-waves-area waves-area">
      <!-- 浅色模式波浪 -->
      <svg class="waves-svg dark:hidden" xmlns="http://www.w3.org/2000/svg" xlink="http://www.w3.org/1999/xlink" viewBox="0 24 150 28" preserveAspectRatio="none" shape-rendering="auto">
        <defs>
          <path id="gentle-wave-light" d="M -160 44 c 30 0 58 -18 88 -18 s 58 18 88 18 s 58 -18 88 -18 s 58 18 88 18 v 44 h -352 Z"/>
        </defs>
        <g class="parallax">
          <use href="#gentle-wave-light" x="48" y="0" fill="#f7f9febd"></use>
          <use href="#gentle-wave-light" x="48" y="3" fill="#f7f9fe82"></use>
          <use href="#gentle-wave-light" x="48" y="5" fill="#f7f9fe36"></use>
          <use href="#gentle-wave-light" x="48" y="7" fill="#f7f9fe"></use>
        </g>
      </svg>
      
      <!-- 深色模式波浪 -->
      <svg class="waves-svg hidden dark:block" xmlns="http://www.w3.org/2000/svg" xlink="http://www.w3.org/1999/xlink" viewBox="0 24 150 28" preserveAspectRatio="none" shape-rendering="auto">
        <defs>
          <path id="gentle-wave-dark" d="M -160 44 c 30 0 58 -18 88 -18 s 58 18 88 18 s 58 -18 88 -18 s 58 18 88 18 v 44 h -352 Z"/>
        </defs>
        <g class="parallax">
          <use href="#gentle-wave-dark" x="48" y="0" fill="#020617c8"></use>
          <use href="#gentle-wave-dark" x="48" y="3" fill="#02061780"></use>
          <use href="#gentle-wave-dark" x="48" y="5" fill="#0206173e"></use>
          <use href="#gentle-wave-dark" x="48" y="7" fill="#020617"></use>
        </g>
      </svg>
    </section>
  )}

  <style>
    /* 波浪动画 */
    @keyframes move-forever {
      0% {
        transform: translate3d(-90px, 0, 0);
      }
      100% {
        transform: translate3d(85px, 0, 0);
      }
    }

    .parallax > use {
      animation: move-forever 25s cubic-bezier(0.55, 0.5, 0.45, 0.5) infinite;
      will-change: transform;
    }

    /* 多层波浪动画 */
    .parallax > use:nth-child(1) {
      animation-delay: -2s;
      animation-duration: 7s;
    }

    .parallax > use:nth-child(2) {
      animation-delay: -3s;
      animation-duration: 10s;
    }

    .parallax > use:nth-child(3) {
      animation-delay: -4s;
      animation-duration: 13s;
    }

    .parallax > use:nth-child(4) {
      animation-delay: -5s;
      animation-duration: 20s;
    }

    /* 波浪区域样式 */
    .main-hero-waves-area {
      width: 100%;
      position: absolute;
      left: 0;
      bottom: -11px;
      z-index: 5;
      pointer-events: none;
    }

    .waves-area .waves-svg {
      width: 100%;
      height: 3.75rem;
    }

    /* 移动端适配 */
    @media (max-width: 768px) {
      .waves-area .waves-svg {
        height: 40px;
        min-height: 40px;
      }
      .main-hero-waves-area {
        display: none;
        visibility: hidden;
      }
    }
  </style>
  
  <!-- 优化的浮动粒子效果 -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    {particles.map((particle, index) => (
      <div
        key={`particle-${index}`}
        class="absolute rounded-full animate-pulse"
        style={{
          left: particle.left,
          top: particle.top,
          width: particle.width,
          height: particle.height,
          backgroundColor: particle.backgroundColor,
          animationDelay: particle.animationDelay,
          animationDuration: particle.animationDuration,
          boxShadow: particle.boxShadow
        }}
      />
    ))}
  </div>
</div>

<script>
  // 加载不蒜子统计脚本
  const script = document.createElement('script');
  script.src = '/busuanzi.min.js';
  script.defer = true;
  script.onload = () => {
    const windowWithBusuanzi = window as any;
    if (windowWithBusuanzi.BUSUANZI) {
      windowWithBusuanzi.BUSUANZI.fetch();
    }
  };
  document.body.appendChild(script);
</script>
