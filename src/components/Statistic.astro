---
import { themeConfig } from '../../starread.config';
import { getCollection } from 'astro:content';

// 字数统计函数（适用于中英文混合文本）
function countWords(text) {
  if (!text) return 0;
  // 匹配中文字符和英文单词
  const chineseChars = text.match(/[\u4e00-\u9fa5]/g) || [];
  const englishWords = text.match(/[a-zA-Z]+/g) || [];
  return chineseChars.length + englishWords.length;
}

// 获取文章总数和全站字数
const articles = await getCollection('articles');
const articleCount = articles.length;

// 计算全站总字数
let totalWords = 0;
for (const article of articles) {
  totalWords += countWords(article.body);
}

// 计算建站天数
function getSiteDays() {
  if (!themeConfig.site.foundedDate) return 0;
  
  const founded = new Date(themeConfig.site.foundedDate);
  const today = new Date();
  const diffTime = Math.abs(today.getTime() - founded.getTime());
  const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
  return diffDays;
}

const siteDays = getSiteDays();
---

<div class="bg-white/70 backdrop-blur-xl border border-white/20 shadow-[0_1px_0_0_rgba(255,255,255,0.6)_inset,0_8px_30px_rgba(0,0,0,0.06)] dark:bg-cyan-950/30 dark:backdrop-blur-xl dark:border-white/10 dark:shadow-[0_1px_0_0_rgba(255,255,255,0.08)_inset,0_8px_30px_rgba(0,0,0,0.35)] rounded-lg shadow-sm p-4">
  <div class="flex items-center space-x-2 mb-4">
    <span class="icon-[lucide--bar-chart-3] w-5 h-5 text-accent"></span>
    <span class="text-accent font-bold text-lg">站点统计</span>
  </div>

  <div class="space-y-3 text-sm">
    <!-- 文章总数 -->
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-2">
        <span class="icon-[lucide--file-text] w-4 h-4 text-gray-500 dark:text-slate-400"></span>
        <span class="text-gray-600 dark:text-slate-400">文章总数</span>
      </div>
      <span class="font-medium text-primary dark:text-secondary">{articleCount} 篇</span>
    </div>
    
    <!-- 全站字数 -->
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-2">
        <span class="icon-[lucide--edit-3] w-4 h-4 text-gray-500 dark:text-slate-400"></span>
        <span class="text-gray-600 dark:text-slate-400">全站字数</span>
      </div>
      <span class="font-medium text-primary dark:text-secondary">{totalWords} 字</span>
    </div>
    
    <!-- 建站天数 -->
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-2">
        <span class="icon-[lucide--calendar-days] w-4 h-4 text-gray-500 dark:text-slate-400"></span>
        <span class="text-gray-600 dark:text-slate-400">建站天数</span>
      </div>
      <span class="font-medium text-primary dark:text-secondary">{siteDays} 天</span>
    </div>

    <!-- 总访问量 -->
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-2">
        <span class="icon-[lucide--eye] w-4 h-4 text-gray-500 dark:text-slate-400"></span>
        <span class="text-gray-600 dark:text-slate-400">总访问量</span>
      </div>
      <span id="busuanzi_site_pv" class="font-medium text-primary dark:text-secondary">加载中...</span>
    </div>

    <!-- 总访客数 -->
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-2">
        <span class="icon-[lucide--users] w-4 h-4 text-gray-500 dark:text-slate-400"></span>
        <span class="text-gray-600 dark:text-slate-400">总访客数</span>
      </div>
      <span id="busuanzi_site_uv" class="font-medium text-primary dark:text-secondary">加载中...</span>
    </div>

    <!-- 今日访问量 -->
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-2">
        <span class="icon-[lucide--trending-up] w-4 h-4 text-gray-500 dark:text-slate-400"></span>
        <span class="text-gray-600 dark:text-slate-400">今日访问</span>
      </div>
      <span id="busuanzi_today_site_pv" class="font-medium text-primary dark:text-secondary">加载中...</span>
    </div>

    <!-- 今日访客数 -->
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-2">
        <span class="icon-[lucide--user-plus] w-4 h-4 text-gray-500 dark:text-slate-400"></span>
        <span class="text-gray-600 dark:text-slate-400">今日访客</span>
      </div>
      <span id="busuanzi_today_site_uv" class="font-medium text-primary dark:text-secondary">加载中...</span>
    </div>
  </div>
</div>

<script>
  // 确保不蒜子脚本已加载
  function loadBusuanzi() {
    if (typeof window !== 'undefined' && !window.busuanzi) {
      const script = document.createElement('script');
      script.src = '/busuanzi.min.js';
      script.async = true;
      document.head.appendChild(script);
    }
  }

  // 页面加载完成后执行
  if (typeof window !== 'undefined') {
    loadBusuanzi();
  }
</script>