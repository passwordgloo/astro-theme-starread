---
import type { CollectionEntry } from 'astro:content';

interface Props {
  title: string;
  articles: CollectionEntry<'articles'>[];
}

const { title, articles } = Astro.props;
---

<div class="bg-white rounded-lg shadow-sm overflow-hidden">
  <div class="px-4 py-3 border-b border-gray-100 flex justify-between items-center">
    <div class="flex items-center space-x-2">
      <span class="icon-[lucide--file-text] w-5 h-5 text-primary"></span>
      <h2 class="font-bold text-lg text-dark">{title}</h2>
    </div>
    <a href="#" class="text-sm text-primary hover:text-primary/80 transition-colors">更多</a>
  </div>
  
  <div class="p-4 space-y-4">
    {articles.length > 0 ? (
      articles.map((article, index) => (
        <div key={article.slug} class="flex items-start space-x-3 p-2 hover:bg-gray-50 rounded-md transition-colors">
          <div class="flex-shrink-0 w-8 h-8 bg-gray-100 rounded-full flex items-center justify-center text-gray-500 text-sm font-medium">
            {index + 1}
          </div>
          <div class="flex-1 min-w-0">
            <a href={`/articles/${article.slug}`} class="text-gray-900 hover:text-primary transition-colors line-clamp-1">{article.data.title}</a>
            <div class="flex items-center mt-1 text-xs text-gray-500 space-x-2">
              <span>{article.data.author || 'applek'}</span>
              <span>·</span>
              <span>{typeof article.data.date === 'string' ? article.data.date.split(' ')[0] : article.data.date?.toISOString().split('T')[0]}</span>
            </div>
          </div>
        </div>
      ))
    ) : (
      <div class="text-center py-8 text-gray-500">
        暂无文章数据
      </div>
    )}
  </div>
</div>