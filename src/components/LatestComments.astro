<div class="bg-white rounded-lg shadow-sm overflow-hidden mb-6">
  <div class="px-4 py-3 border-b border-gray-100 flex justify-between items-center">
    <div class="flex items-center space-x-2">
      <svg class="w-5 h-5 text-primary" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
      </svg>
      <h2 class="font-bold text-lg text-dark">最新评论</h2>
    </div>
  </div>
  
  <div class="p-4 space-y-4">
    {comments.map(comment => (
      <div key={comment.id} class="flex space-x-3 p-2 hover:bg-gray-50 rounded-md transition-colors">
        <div class="flex-shrink-0">
          <img src={comment.avatar} alt={comment.user} class="w-10 h-10 rounded-full object-cover" />
        </div>
        <div class="flex-1 min-w-0">
          <div class="flex items-center justify-between mb-1">
            <h4 class="font-medium text-gray-900 text-sm">{comment.user}</h4>
            <span class="text-xs text-gray-500">{comment.date}</span>
          </div>
          <p class="text-sm text-gray-600 mb-2 line-clamp-2">{comment.content}</p>
          <a href="#" class="text-xs text-primary hover:text-primary/80 transition-colors">
            评论于 {comment.article}
          </a>
        </div>
      </div>
    ))}
