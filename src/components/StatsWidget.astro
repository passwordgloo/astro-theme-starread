---
// 获取当前日期
const now = new Date();
const currentYear = now.getFullYear();
const currentMonth = now.getMonth() + 1; // 月份从0开始
const currentWeek = Math.ceil(now.getDate() / 7); // 计算当前是第几周
const daysInMonth = new Date(currentYear, currentMonth, 0).getDate(); // 获取当月天数
const monthProgress = Math.round((now.getDate() / daysInMonth) * 100); // 计算月进度
const yearProgress = Math.round(((now.getMonth() * 30 + now.getDate()) / 365) * 100); // 计算年进度
const weekProgress = Math.round((now.getDay() / 6) * 100); // 计算周进度(周日为0，周六为6)

// 月份名称数组
const monthNames = ['一月', '二月', '三月', '四月', '五月', '六月', '七月', '八月', '九月', '十月', '十一月', '十二月'];
const currentMonthName = monthNames[currentMonth - 1];
---

<div class="bg-white/70 backdrop-blur-xl border border-white/20 shadow-[0_1px_0_0_rgba(255,255,255,0.6)_inset,0_8px_30px_rgba(0,0,0,0.06)] dark:bg-cyan-950/30 dark:backdrop-blur-xl dark:border-white/10 dark:shadow-[0_1px_0_0_rgba(255,255,255,0.08)_inset,0_8px_30px_rgba(0,0,0,0.35)] rounded-lg shadow-sm p-4">
  <div class="flex items-center space-x-2 mb-4">
    <span class="icon-[lucide--bar-chart-3] w-5 h-5 text-accent"></span>
    <span class="text-accent font-bold text-lg">统计信息</span>
  </div>
  <div class="space-y-5">

      <!-- 周进度 -->
    <div class="relative pt-1">
      <div class="flex mb-2 items-center justify-between">
        <div>
          <span class="text-xs font-semibold inline-block py-1 px-2 uppercase rounded-full text-green-600 bg-green-200">
            第{currentWeek}周进度
          </span>
        </div>
        <div class="text-right">
          <span class="text-xs font-semibold inline-block text-green-600">
            {weekProgress}%
          </span>
        </div>
      </div>
      <div class="overflow-hidden h-2 mb-4 text-xs flex rounded bg-green-200">
        <div style={`width: ${weekProgress}%`} class="shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center bg-green-500"></div>
      </div>
    </div>
  
    <!-- 月份进度 -->
    <div class="relative pt-1">
      <div class="flex mb-2 items-center justify-between">
        <div>
          <span class="text-xs font-semibold inline-block py-1 px-2 uppercase rounded-full text-blue-600 bg-blue-200">
            {currentMonthName}进度
          </span>
        </div>
        <div class="text-right">
          <span class="text-xs font-semibold inline-block text-blue-600">
            {monthProgress}%
          </span>
        </div>
      </div>
      <div class="overflow-hidden h-2 mb-4 text-xs flex rounded bg-blue-200">
        <div style={`width: ${monthProgress}%`} class="shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center bg-blue-500"></div>
      </div>
    </div>

    <!-- 年进度 -->
    <div class="relative pt-1">
      <div class="flex mb-2 items-center justify-between">
        <div>
          <span class="text-xs font-semibold inline-block py-1 px-2 uppercase rounded-full text-purple-600 bg-purple-200">
            {currentYear}年进度
          </span>
        </div>
        <div class="text-right">
          <span class="text-xs font-semibold inline-block text-purple-600">
            {yearProgress}%
          </span>
        </div>
      </div>
      <div class="overflow-hidden h-2 mb-4 text-xs flex rounded bg-purple-200">
        <div style={`width: ${yearProgress}%`} class="shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center bg-purple-500"></div>
      </div>
    </div>
  </div>
</div>