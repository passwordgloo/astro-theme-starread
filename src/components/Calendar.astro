---
import { themeConfig } from '../../starread.config';
import { getCollection } from 'astro:content';
import { countWords } from './frontmatter.ts';

// 获取所有内容集合
const articles = await getCollection('articles');
const notes = await getCollection('notes', ({ data }) => {
  return data.published !== false;
});

// 计算总文件数
const totalFileCount = articles.length + notes.length;

// 计算全站总字数
let totalWords = 0;

// 统计文章字数
for (const article of articles) {
  totalWords += countWords(article.body);
}

// 统计笔记字数
for (const note of notes) {
  totalWords += countWords(note.body);
}

// 单独统计各类型文件数
const articleCount = articles.length;
const noteCount = notes.length;

// 计算建站天数
function getSiteDays() {
  if (!themeConfig.site.foundedDate) return 0;
  
  const founded = new Date(themeConfig.site.foundedDate);
  const today = new Date();
  const diffTime = Math.abs(today.getTime() - founded.getTime());
  const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
  return diffDays;
}

const siteDays = getSiteDays();

// 获取当前日期和日历相关信息
const now = new Date();
const currentYear = now.getFullYear();
const currentMonth = now.getMonth() + 1; // 月份从0开始

// 根据配置选择一周起始日
// zh: 一周从周一开始 (周一=1, 周二=2, ..., 周日=7)
// en: 一周从周日开始 (周日=1, 周一=2, ..., 周六=7)
const language = themeConfig.language || 'zh';
let adjustedDay;
let totalWeekDays = 7;

if (language === 'zh') {
  // 中文模式：周一为1，周日为7
  adjustedDay = now.getDay() === 0 ? 7 : now.getDay();
} else {
  // 英文模式：周日为1，周六为7
  adjustedDay = now.getDay() === 0 ? 1 : now.getDay() + 1;
}

// 计算周进度 (例如：周三就是3/7)
const weekProgress = Math.round((adjustedDay / totalWeekDays) * 100);

// 月份名称数组
const monthNames = ['一月', '二月', '三月', '四月', '五月', '六月', '七月', '八月', '九月', '十月', '十一月', '十二月'];
const currentMonthName = monthNames[currentMonth - 1];

// 计算当月天数
const daysInMonth = new Date(currentYear, currentMonth, 0).getDate();
const monthProgress = Math.round((now.getDate() / daysInMonth) * 100);

// 计算年进度
const yearProgress = Math.round(((now.getMonth() * 30 + now.getDate()) / 365) * 100);
---

<div class="bg-white/70 backdrop-blur-xl border border-white/20 shadow-[0_1px_0_0_rgba(255,255,255,0.6)_inset,0_8px_30px_rgba(0,0,0,0.06)] dark:bg-cyan-950/30 dark:backdrop-blur-xl dark:border-white/10 dark:shadow-[0_1px_0_0_rgba(255,255,255,0.08)_inset,0_8px_30px_rgba(0,0,0,0.35)] rounded-lg shadow-sm p-4">
  <div class="flex items-center space-x-2 mb-4">
    <span class="icon-[lucide--calendar] w-5 h-5 text-accent"></span>
    <span class="text-accent font-bold text-lg">日历统计</span>
  </div>

  <div class="space-y-3 mb-6">
    <!-- 周进度 -->
    <div class="relative pt-1">
      <div class="flex mb-2 items-center justify-between">
        <div>
          <span class="text-xs font-semibold inline-block py-1 px-2 uppercase rounded-full text-green-600 bg-green-200">
            本周进度 ({adjustedDay}/{totalWeekDays})
          </span>
        </div>
        <div class="text-right">
          <span class="text-xs font-semibold inline-block text-green-600">
            {weekProgress}%
          </span>
        </div>
      </div>
      <div class="overflow-hidden h-2 mb-4 text-xs flex rounded bg-green-200">
        <div style={`width: ${weekProgress}%`} class="shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center bg-green-500"></div>
      </div>
    </div>
  
    <!-- 月份进度 -->
    <div class="relative pt-1">
      <div class="flex mb-2 items-center justify-between">
        <div>
          <span class="text-xs font-semibold inline-block py-1 px-2 uppercase rounded-full text-blue-600 bg-blue-200">
            {currentMonthName}进度 ({now.getDate()}/{daysInMonth})
          </span>
        </div>
        <div class="text-right">
          <span class="text-xs font-semibold inline-block text-blue-600">
            {monthProgress}%
          </span>
        </div>
      </div>
      <div class="overflow-hidden h-2 mb-4 text-xs flex rounded bg-blue-200">
        <div style={`width: ${monthProgress}%`} class="shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center bg-blue-500"></div>
      </div>
    </div>

    <!-- 年进度 -->
    <div class="relative pt-1">
      <div class="flex mb-2 items-center justify-between">
        <div>
          <span class="text-xs font-semibold inline-block py-1 px-2 uppercase rounded-full text-purple-600 bg-purple-200">
            {currentYear}年进度
          </span>
        </div>
        <div class="text-right">
          <span class="text-xs font-semibold inline-block text-purple-600">
            {yearProgress}%
          </span>
        </div>
      </div>
      <div class="overflow-hidden h-2 mb-4 text-xs flex rounded bg-purple-200">
        <div style={`width: ${yearProgress}%`} class="shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center bg-purple-500"></div>
      </div>
    </div>
  </div>

  <div class="space-y-3 text-sm">
    <!-- 总文件数 -->
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-2">
        <span class="icon-[lucide--files] w-4 h-4 text-gray-500 dark:text-slate-400"></span>
        <span class="text-gray-600 dark:text-slate-400">总文件数</span>
      </div>
      <span class="font-medium text-primary dark:text-secondary">{totalFileCount} 个</span>
    </div>
    
    <!-- 文章总数 -->
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-2">
        <span class="icon-[lucide--file-text] w-4 h-4 text-gray-500 dark:text-slate-400"></span>
        <span class="text-gray-600 dark:text-slate-400">文章总数</span>
      </div>
      <span class="font-medium text-primary dark:text-secondary">{articleCount} 篇</span>
    </div>
    
    <!-- 笔记总数 -->
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-2">
        <span class="icon-[lucide--file-text] w-4 h-4 text-gray-500 dark:text-slate-400"></span>
        <span class="text-gray-600 dark:text-slate-400">笔记总数</span>
      </div>
      <span class="font-medium text-primary dark:text-secondary">{noteCount} 篇</span>
    </div>
    
    <!-- 全站字数 -->
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-2">
        <span class="icon-[lucide--edit-3] w-4 h-4 text-gray-500 dark:text-slate-400"></span>
        <span class="text-gray-600 dark:text-slate-400">全站字数</span>
      </div>
      <span class="font-medium text-primary dark:text-secondary">{totalWords} 字</span>
    </div>
    
    <!-- 建站天数 -->
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-2">
        <span class="icon-[lucide--calendar-days] w-4 h-4 text-gray-500 dark:text-slate-400"></span>
        <span class="text-gray-600 dark:text-slate-400">建站天数</span>
      </div>
      <span class="font-medium text-primary dark:text-secondary">{siteDays} 天</span>
    </div>
  </div>

  <!-- 统计数据部分 -->
  <div class="border-t border-gray-200 dark:border-gray-700 mt-4 pt-4 space-y-3 text-sm">
    <h4 class="font-medium text-gray-900 dark:text-white mb-2">访问统计</h4>
    
    <!-- 总访问量 -->
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-2">
        <span class="icon-[lucide--eye] w-4 h-4 text-gray-500 dark:text-slate-400"></span>
        <span class="text-gray-600 dark:text-slate-400">总访问量</span>
      </div>
      <span id="busuanzi_site_pv" class="font-medium text-primary dark:text-secondary">加载中...</span>
    </div>

    <!-- 总访客数 -->
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-2">
        <span class="icon-[lucide--users] w-4 h-4 text-gray-500 dark:text-slate-400"></span>
        <span class="text-gray-600 dark:text-slate-400">总访客数</span>
      </div>
      <span id="busuanzi_site_uv" class="font-medium text-primary dark:text-secondary">加载中...</span>
    </div>

    <!-- 今日访问量 -->
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-2">
        <span class="icon-[lucide--trending-up] w-4 h-4 text-gray-500 dark:text-slate-400"></span>
        <span class="text-gray-600 dark:text-slate-400">今日访问</span>
      </div>
      <span id="busuanzi_today_site_pv" class="font-medium text-primary dark:text-secondary">加载中...</span>
    </div>

    <!-- 今日访客数 -->
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-2">
        <span class="icon-[lucide--user-plus] w-4 h-4 text-gray-500 dark:text-slate-400"></span>
        <span class="text-gray-600 dark:text-slate-400">今日访客</span>
      </div>
      <span id="busuanzi_today_site_uv" class="font-medium text-primary dark:text-secondary">加载中...</span>
    </div>
  </div>
</div>

<script>
  // 确保不蒜子脚本已加载
  function loadBusuanzi() {
    if (typeof window !== 'undefined' && !window.busuanzi) {
      const script = document.createElement('script');
      script.src = '/busuanzi.min.js';
      script.async = true;
      document.head.appendChild(script);
    }
  }

  // 页面加载完成后执行
  if (typeof window !== 'undefined') {
    loadBusuanzi();
  }
</script>