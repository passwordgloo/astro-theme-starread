---
// ArticleTOC.astro
interface Props {
  isSticky?: boolean;
}

const { isSticky = true } = Astro.props;
---

<div 
  id="article-toc-container" 
  class:list={[
    'bg-white/70 backdrop-blur-xl border border-white/20 shadow-[0_1px_0_0_rgba(255,255,255,0.6)_inset,0_8px_30px_rgba(0,0,0,0.06)]',
    'dark:bg-cyan-950/30 dark:backdrop-blur-xl dark:border-white/10 dark:shadow-[0_1px_0_0_rgba(255,255,255,0.08)_inset,0_8px_30px_rgba(0,0,0,0.35)]',
    'rounded-lg shadow-sm p-4 transition-all duration-300',
    isSticky && 'sticky top-24 max-h-[calc(100vh-120px)] overflow-y-auto'
  ]}
>
  <div class="flex items-center space-x-2 mb-4">
    <span class="icon-[lucide--list-tree] w-5 h-5 text-accent"></span>
    <span class="text-accent font-bold text-lg">文章目录</span>
  </div>
  
  <!-- 无目录占位符 -->
  <div id="toc-placeholder" class="text-center py-8">
    <div class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-gray-100 dark:bg-slate-800 mb-3">
      <span class="icon-[lucide--list-tree] w-5 h-5 transition-colors duration-300"></span>
    </div>
    <p class="text-gray-500 dark:text-slate-400 italic">暂无目录</p>
  </div>
  
  <!-- 目录导航 -->
  <nav id="table-of-contents" class="text-sm space-y-1 scroll-smooth hidden"></nav>
</div>

<script>
  interface HeadingData {
    id: string;
    text: string;
    level: 'h2' | 'h3' | 'h4';
    element: HTMLElement;
  }

  // 状态管理
  let headings: HeadingData[] = [];
  let activeIndex: number = -1;
  let scrollTimeout: number | null = null;
  let isInitialized: boolean = false;

  // 获取标题样式类
  const getHeadingClasses = (level: string, isActive: boolean): string => {
    const classes = [
      'group flex items-center py-2.5 px-4 rounded-lg transition-all duration-200'
    ];

    switch (level) {
      case 'h2':
        classes.push('font-semibold text-gray-700 dark:text-gray-200 pl-3');
        break;
      case 'h3':
        classes.push('font-medium text-gray-600 dark:text-gray-300 pl-6');
        break;
      case 'h4':
        classes.push('text-sm text-gray-500 dark:text-gray-400 pl-9');
        break;
    }

    if (!isActive) {
      classes.push('hover:text-primary dark:hover:text-primary');
    } else {
      classes.push('text-white bg-primary dark:bg-secondary shadow-sm font-semibold');
    }

    return classes.join(' ');
  };

  // 初始化目录
  const initializeTOC = (): void => {
    const content = document.getElementById('article-content');
    const tocContainer = document.getElementById('table-of-contents');
    const placeholder = document.getElementById('toc-placeholder');
    
    if (!content || !tocContainer || !placeholder) return;

    const headingElements = Array.from(content.querySelectorAll('h2, h3, h4')) as HTMLElement[];
    
    if (headingElements.length === 0) {
      placeholder.classList.remove('hidden');
      tocContainer.classList.add('hidden');
      return;
    }

    // 构建标题数据
    headings = headingElements.map((heading) => {
      const textContent = heading.textContent || 'heading';
      const id = heading.id || textContent.toLowerCase()
        .replace(/\s+/g, '-')
        .replace(/[^\w-]/g, '');
      heading.id = id;
      
      return {
        id,
        text: textContent,
        level: heading.tagName.toLowerCase() as 'h2' | 'h3' | 'h4',
        element: heading
      };
    });

    // 渲染目录
    tocContainer.innerHTML = headings.map((heading, index) => `
      <div class="relative">
        <a 
          href="#${heading.id}" 
          class="${getHeadingClasses(heading.level, false)}"
          data-level="${heading.level}"
          data-index="${index}"
        >
          <span class="line-clamp-2">${heading.text}</span>
        </a>
      </div>
    `).join('');

    // 绑定点击事件
    const links = tocContainer.querySelectorAll('a');
    links.forEach((link, index) => {
      link.addEventListener('click', (e) => scrollToSection(headings[index].id, e, index));
    });

    placeholder.classList.add('hidden');
    tocContainer.classList.remove('hidden');
    isInitialized = true;
    
    // 初始化后立即检查当前位置
    setTimeout(() => handleScroll(), 100);
  };

  // 滚动到指定章节
  const scrollToSection = (id: string, event: Event, clickedIndex: number): void => {
    event.preventDefault();
    
    activeIndex = clickedIndex;
    updateActiveState();
    
    const targetElement = document.getElementById(id);
    const targetLink = event.currentTarget as HTMLAnchorElement;

    if (targetElement) {
      // 点击动画
      targetLink.style.transform = 'scale(0.98)';
      setTimeout(() => {
        targetLink.style.transform = 'scale(1)';
      }, 150);

      const targetPosition = targetElement.getBoundingClientRect().top + window.scrollY - 100;
      window.scrollTo({
        top: targetPosition,
        behavior: 'smooth'
      });
    }
  };

  // 更新激活状态
  const updateActiveState = (): void => {
    const tocContainer = document.getElementById('table-of-contents');
    if (!tocContainer) return;

    const links = tocContainer.querySelectorAll('a');
    links.forEach((link, index) => {
      const isActive = index === activeIndex;
      const level = link.getAttribute('data-level') || 'h2';
      link.className = getHeadingClasses(level, isActive);
    });
  };

  // 处理滚动事件
  const handleScroll = (): void => {
    if (headings.length === 0) return;
    
    let currentSectionIndex = -1;
    const scrollPosition = window.scrollY + 120;

    for (let i = headings.length - 1; i >= 0; i--) {
      try {
        const heading = headings[i];
        const sectionTop = heading.element.getBoundingClientRect().top + window.scrollY;
        
        if (scrollPosition >= sectionTop) {
          currentSectionIndex = i;
          break;
        }
      } catch (error) {
        console.warn('Error accessing heading element:', error);
      }
    }

    // 如果滚动到底部,选择最后一个章节
    if (window.scrollY + window.innerHeight >= document.documentElement.scrollHeight - 100) {
      currentSectionIndex = headings.length - 1;
    }

    if (currentSectionIndex !== activeIndex && currentSectionIndex !== -1) {
      activeIndex = currentSectionIndex;
      updateActiveState();
      scrollTOCIntoView(currentSectionIndex);
    }
  };

  // 自动滚动目录项到可见区域
  const scrollTOCIntoView = (index: number): void => {
    const tocContainer = document.getElementById('table-of-contents');
    if (!tocContainer) return;
    
    const activeLink = tocContainer.querySelector(`[data-index="${index}"]`) as HTMLElement;
    if (!activeLink) return;
    
    // 计算目标位置
    const containerRect = tocContainer.getBoundingClientRect();
    const linkRect = activeLink.getBoundingClientRect();
    
    // 如果链接不在可见区域,滚动到中间位置
    if (linkRect.top < containerRect.top || linkRect.bottom > containerRect.bottom) {
      const scrollTop = activeLink.offsetTop - tocContainer.clientHeight / 2 + linkRect.height / 2;
      tocContainer.scrollTo({
        top: scrollTop,
        behavior: 'smooth'
      });
    }
  };

  // 防抖处理
  const debounce = (func: Function, delay: number) => {
    return () => {
      if (scrollTimeout) clearTimeout(scrollTimeout);
      scrollTimeout = window.setTimeout(() => func(), delay);
    };
  };

  const debouncedScroll = debounce(handleScroll, 20);

  // 初始化
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initializeTOC);
  } else {
    initializeTOC();
  }

  // 额外的初始化检查
  setTimeout(() => {
    if (!isInitialized) {
      initializeTOC();
    }
  }, 100);

  // 绑定滚动和调整大小事件
  window.addEventListener('scroll', debouncedScroll, { passive: true });
  window.addEventListener('resize', debouncedScroll, { passive: true });

  // 清理函数(页面卸载时)
  window.addEventListener('beforeunload', () => {
    window.removeEventListener('scroll', debouncedScroll);
    window.removeEventListener('resize', debouncedScroll);
    if (scrollTimeout) clearTimeout(scrollTimeout);
  });
</script>

<style>
  /* 平滑滚动 */
  #table-of-contents {
    scroll-behavior: smooth;
  }
  
  /* 自定义滚动条 */
  #article-toc-container::-webkit-scrollbar {
    width: 6px;
  }
  
  #article-toc-container::-webkit-scrollbar-track {
    background: transparent;
  }
  
  #article-toc-container::-webkit-scrollbar-thumb {
    background: rgba(156, 163, 175, 0.3);
    border-radius: 3px;
  }
  
  #article-toc-container::-webkit-scrollbar-thumb:hover {
    background: rgba(156, 163, 175, 0.5);
  }
  
  /* 深色模式滚动条 */
  .dark #article-toc-container::-webkit-scrollbar-thumb {
    background: rgba(148, 163, 184, 0.3);
  }
  
  .dark #article-toc-container::-webkit-scrollbar-thumb:hover {
    background: rgba(148, 163, 184, 0.5);
  }
</style>
