---
import { getCollection } from 'astro:content';
import { themeConfig } from '../content/config';

// 获取推荐文章数据
const recommendedArticles = await getCollection('articles', ({ data }) => {
  // 这里可以添加筛选条件，比如推荐文章标签
  return true;
});

// 限制显示4篇文章
const limitedArticles = recommendedArticles.slice(0, 4);
---

<div class="bg-white rounded-lg shadow-sm p-4">
  <div class="flex items-center space-x-2 mb-4">
    <span class="icon-[lucide--star] w-5 h-5 text-accent"></span>
	  <span class="text-accent font-bold text-lg">推荐文章</span>
	</div>
  <div class="space-y-3">
    {limitedArticles.length > 0 ? (
      limitedArticles.map((article, index) => (
        <a href={`/articles/${article.slug}`} class="flex items-center p-2 hover:bg-gray-50 rounded-lg transition-colors" key={article.slug}>
          <span class="flex-shrink-0 w-6 h-6 bg-blue-100 text-blue-600 rounded-full flex items-center justify-center text-sm font-bold mr-3">{index + 1}</span>
          <span class="text-sm text-gray-700 hover:text-blue-600 transition-colors">{article.data.title}</span>
        </a>
      ))
    ) : (
      <p class="text-sm text-gray-500 text-center py-4">暂无推荐文章</p>
    )}
  </div>
</div>